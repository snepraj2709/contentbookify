{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksConfigPath": "nixpacks.toml"
  },
  "deploy": {
    "startCommand": "LD_LIBRARY_PATH=/app/.libs:$LD_LIBRARY_PATH python -m uvicorn main:app --host 0.0.0.0 --port ${PORT:-8000}",
    "healthcheckPath": "/",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
